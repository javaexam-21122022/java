

import java.util.*;
public class Notebooks{
public static void main(String args[]){
System.out.println("Enter the number of notebooks");
Scanner sc = new Scanner(System.in);
int n=scnextInt();
int count = 0;
for(int i=1;i<=n;i++){
if(i%2!=0){
count++;
}
}
System.out.println("Number of Odd Notebooks =" +count);
}
}
